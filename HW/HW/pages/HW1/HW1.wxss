}



.sensors-system{
  margin: 0 0 32rpx 34rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.system-info{
  display: flex;
  width: 330rpx;
  height: 205rpx;
  box-shadow: 0 8rpx 20rpx  rgba(0 ,0 ,0.3);
  background-color:#ffffff ;
  border-radius: 32rpx;
  margin: 0 23rpx 23rpx 0;
}
.sensors-system-box1{
  margin-right: 15rpx;
display: flex;
align-items: center;
justify-content: center;
width: 80rpx;
}
.sensors-system-box2 >view{
  margin-top:19rpx ;
  width: 200rpx;
}
.sensors-system-box3{
  color: red;
  font-size: 65rpx;
  font-weight: 600;
  line-height: 205rpx;
}
#fire-alert, #gas-alert {
  color: red;
  font-weight: bold;
  text-align: center;
  font-size: 36rpx;
  margin-top: 20rpx;
}